
{% render 'graphql-newsletter-form', settings: block.settings %}

{% schema %}
{
  "name": "GraphQL Newsletter",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "This block demonstrates Shopify Storefront API usage with GraphQL. It requires a Storefront API access token."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Create Your Account"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Sign up to get updates on new products. This form uses GraphQL with Shopify Storefront API."
    },
    {
      "type": "text",
      "id": "storefront_api_token",
      "label": "Storefront API Access Token",
      "info": "Create a token in Shopify Admin → Settings → Apps and sales channels → Develop apps → Create app → Configure Storefront API"
    },
    {
      "type": "checkbox",
      "id": "inherit_color_scheme",
      "label": "Inherit color scheme",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1",
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "GraphQL Newsletter",
      "category": "Forms"
    }
  ]
}
{% endschema %}

